                <Button Text="Submit" Clicked="OnButtonClicked"  BackgroundColor="DarkBlue"  CornerRadius="20" TextColor="White" Grid.Row="1" />


         </Grid>

        </StackLayout>
      </ScrollView>

    </ContentPage.Content>
