<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthWellBeing.Views.ItemsPage"
              Title="{Binding Title}"
             x:Name="BrowseItemsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Mental Well Being!"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" TextColor="Blue" >
                
            </Label>
            <BoxView Color="DarkViolet"  HorizontalOptions="FillAndExpand"  
                    HeightRequest="1"/>
            <Grid VerticalOptions="CenterAndExpand"  
                 Padding="0"  
                 HorizontalOptions="FillAndExpand"  
                 BackgroundColor="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1"/>


                </Grid.RowDefinitions>
                <Label x:Name="btnBrowse" Text="Thank you for being part of 'Stop the spread' activity" Grid.Row="0"  VerticalOptions="Center" HorizontalTextAlignment="Center"
                 TextColor="BlueViolet" />
               
                <Image x:Name="ButtonImage"   WidthRequest="100" HeightRequest="100" Source="happy.png" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" Grid.Row="1"  />
                <BoxView Color="DarkViolet"  HorizontalOptions="FillAndExpand"  
                    HeightRequest="1" Grid.Row="2" />

            </Grid>
        </StackLayout>
    </ContentPage.Content>
